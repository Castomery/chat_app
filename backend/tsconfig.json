{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",               // ESM support
    "moduleResolution": "nodenext",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "isolatedModules": true,
    "verbatimModuleSyntax": true
  },
  "include": ["./src/**/*"] 
}
